{% extends "layout.njk" %}

{% block content %}

<div class="card">


  <section class="image" style="background: url(https://source.unsplash.com/collection/10085420/900x900) no-repeat center center / cover">
  </section>

  <section class="detail">
  
    <h3>Detalhes</h3>
    <form method="POST" action="/teachers?_method=PUT">    
      
      {% include "teachers/fields.njk" %}
      <input type="hidden" name="id" value="{{teacher.id}}">

    </form>

    <form id="delete" action="/teachers?_method=DELETE" method="post">
      
      <button type="submit">Deletar</button>
      <input type="hidden" name="id" value="{{teacher.id}}">

    </form>

    
  </section>


</div>

{% endblock content %}