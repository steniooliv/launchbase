{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <table width="100%">
    <thead>
      <tr>
        <th>Instructor</th>
        <th>Atendimento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      
      {% for instructor in instructors %}
      
        <tr>
          <td>
            <div>
              <span style="background-image: url({{instructor.avatar}})"></span>
              {{instructor.name}}
            </div>
          </td>

          <td>
            {% for service in instructor.services %}
              <span>{{service}}</span>
            {% endfor %}
          </td>
          <td><a href="/instructors/{{instructor.id}}">ver</a></td>
        </tr>

      {% endfor %}

    </tbody>
  </table>

</div>

{% endblock content %}
