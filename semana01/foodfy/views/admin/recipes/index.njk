{% extends "../layout.njk" %}

{% block content %}

<main>

  <div class="recipes">
    <div class="header">
      <h1>Gerenciar receitas</h1>
      
      <div class="buttons">
          <a id="create-recipes" href="/admin/recipes/create">Criar receita</a>
      </div>
    </div>

    <div class="cards">

      {% for card in recipes %}
          
      <div class="card">
        <div>
          <img src="{{card.image}}" alt="{[card.title}}" srcset="">
        </div>
        <div>
          <h1>{{card.title}}</h1>
          <h2>por {{card.author}}</h2>
          <a href="/admin/recipes/{{card.id}}" class="link">Visualizar</a>
        </div>
      </div>

      {% endfor %}

    </div>

  </div>

</main>



{% endblock content %}