{% extends "../layout.njk" %}

{% block content %}

<main>

  <div class="recipes">

    <div class="header">
      <h1>Editando Chef</h1>

      <div class="buttons">
        <button form="form-delete" class="delete-button" type="submit">Deletar</button>
        <button form="form-put" type="submit">Salvar Chef</button>
      </div>

    </div>

    <div class="chefs">
      
      <form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
        <input
          type="hidden"
          name="id"
          value="{{chefs.id}}"
        >
      </form>

      <form id="form-put" action="/admin/chefs?_method=PUT" method="POST">
        <div class="chefs-fields">
          
          <div class="item">
            <div>Nome</div>
            <div>
              <input type="text" name="name" value="{{chef.name}}">
            </div>
          </div>

          <div class="item">
            <div>Avatar</div>
            <div>
              <input type="url" name="avatar_url" value="{{chef.avatar_url}}">
            </div>
          </div>

        </div>

      </form>
      
    </div>

  </div>

</main>

{% endblock%}