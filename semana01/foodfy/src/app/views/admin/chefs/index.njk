{% extends "../layout.njk" %}

{% block content %}

<main>

  <div class="recipes">
    <div class="header">
      <h1>Gerenciar Chefs</h1>
      
      <div class="buttons">
          <a id="create-recipes" href="/admin/chefs/create">Criar Chef</a>
      </div>
    </div>

    <div class="chefs">

      {% for chef in chefs %}

        <div class="card">
          <div>
            <img src="{{chef.avatar_url}}" alt="{[chef.name}}" srcset="">
          </div>
          <div>
            <h1>{{chef.name}}</h1>
            <a href="/admin/chefs/{{chef.id}}" class="link">Visualizar</a>
          </div>
        </div>

      {% endfor %}

    </div>

  </div>

</main>



{% endblock content %}