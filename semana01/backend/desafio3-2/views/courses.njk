{% extends "layout.njk" %}

{% block head %}
  <title>Cursos</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="wrapper">
  <h1>Cursos</h1>

  <section class="cards">

    {% for course in courses %}

      <div class="card" id="{{course.id}}">

        <img src="{{ course.img }}" alt="{{ course.id }}">

        <div class="description">
          <p>{{ course.description }}</p>
        
          <div class="info">
            <p>{{ course.info }}</p>
            <p class="price">{{ course.price }}</p>
          </div>
        </div>
      </div>

    {% endfor %}


  </section> <!-- cards -->

</div> <!--wrapper-->

<div class="modal-overlay ">
  <div class="modal">
    <a class="buttons">
      <i class="material-icons maxi">maximize</i>
      <i class="material-icons close">close</i>
    </a>

    <div class="modal-content">
      <iframe src="https://rocketseat.com.br/gostack" frameborder="0"></iframe>
    </div>

  </div>

</div>

<script src="./scripts.js"></script>
{% endblock %}