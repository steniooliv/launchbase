{% extends "layout.njk" %}

{% block content %}

<div class="card">

  <section class="image" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>

  <section class="detail">
  
    <h3>Detalhes</h3>

    <div class="items">
      <div>Nome Completo</div>
      <div>{{student.name}}</div>
    </div>

    <div class="items">
      <div>Email</div>
      <div>{{student.email}}</div>
    </div>

    <div class="items">
      <div>Aniversário</div>
      <div>{{student.birth}}</div>
    </div>

    <div class="items">
      <div>Ano Escolar</div>
      <div>{{student.grade}}</div>
    </div>

    <div class="items">
      <div>Carga Horária Semanal</div>
      <div>{{student.hours}}</div>
    </div>

    <div class="items">
      <div>Professor</div>
      <div>{{student.teacher_name}}</div>
    </div>

    <a href="/students/{{student.id}}/edit" class="button">Editar</a>

  </section>

</div>

{% endblock content %}